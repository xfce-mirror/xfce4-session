lockdir=/tmp/xflock4-lock
if ! mkdir "$lockdir" 2>/dev/null; then
    >&2 printf '%s\n' 'Error: xflock4 running already'
    exit 1
fi
trap 'rm -rf "$lockdir"; trap - EXIT' HUP INT TERM EXIT

# Wait a bit so that user have time to raise finger from a key if
# the script is run in terminal.
[ -t 0 ] && sleep 1

# Use a custom lock command, if given.
LOCK_CMD=$(xfconf-query -c xfce4-session -p /general/LockCommand || :)
[ -n "$LOCK_CMD" ] && {
    exit_code=0
    /bin/sh -c "$LOCK_CMD" && exit || {
        exit_code=$?
        >&2 printf "'%s' exited with status %d\n" "$LOCK_CMD" $exit_code
        exit $exit_code
    }
}

# Else try certain screensavers for locking.
for lock_cmd in \
    xscreensaver \
    xfce4-screensaver
do
    # To redirect stdin to /dev/null is needed at least for xscreensaver
    # to not have 1 s delay when invoked on terminal.
    ${lock_cmd}-command --lock </dev/null 2>/dev/null && exit
done

# Else access locking failed.
exit 1
